<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.undersoft.picatch.PICATCH_OPTIONS">


    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="depot IP address"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a3a1a1"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView26"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/depot_ip_t"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/depot_autodown_t"
        android:layout_below="@+id/textView28"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/depot_port_t" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/depot_port_t"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/textView14" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="SAVE OPTIONS"
        android:id="@+id/options_save_b"
        android:singleLine="true"
        android:background="@drawable/picatch_button"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="options->basic"
        android:id="@+id/textView26"
        android:singleLine="true"
        android:textColor="#a3a1a1"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="depot port"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a3a1a1"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/depot_ip_t"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="auto download"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a3a1a1"
        android:textSize="18dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/depot_port_t"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/textView26" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="licence key"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a3a1a1"
        android:textSize="18dp"
        android:layout_below="@+id/depot_autodown_t"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/depot_licence_t"
        android:layout_below="@+id/textView29"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="minutes (0 means off)"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#a3a1a1"
        android:textSize="16dp"
        android:layout_above="@+id/textView29"
        android:layout_toRightOf="@+id/depot_autodown_t"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>
