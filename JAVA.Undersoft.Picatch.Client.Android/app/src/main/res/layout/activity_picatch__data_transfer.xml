<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.undersoft.picatch.PICATCH_TCP_DOWNLOAD">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Download product data"
        android:id="@+id/textView15"
        android:singleLine="true"
        android:textColor="#ff726d6e"
        android:textSize="22dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="download progress"
        android:id="@+id/textView_dt_1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView15"
        android:singleLine="true"
        android:textColor="#ff726d6e"
        android:layout_marginLeft="5dp"
        android:textSize="20dp" />
    
    <ProgressBar
        android:id="@+id/download_progressBar"
        style="@style/BarraProgreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_dt_1"
        android:layout_marginTop="5dp"
        android:indeterminate="false"
        android:max="100"
        android:minHeight="15dp"
        android:progress="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="insert progress"
        android:id="@+id/textView_dt_2"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/download_progressBar"
        android:singleLine="true"
        android:textColor="#ff726d6e"
        android:layout_marginLeft="5dp"
        android:textSize="20dp" />
    
    <ProgressBar
  		style="@style/BarraProgreso"
  		android:layout_width="match_parent"
  		android:layout_height="wrap_content"
  		android:id="@+id/insert_progressBar"
		android:layout_alignParentLeft="true"
		android:layout_marginTop="5dp"
		android:layout_below="@+id/textView_dt_2"
		android:max="100"
		android:progress="0"
		android:indeterminate="false"
		/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 MB"
        android:id="@+id/textView_dt_3"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/insert_progressBar"
        android:singleLine="true"
        android:textColor="#ff726d6e"
        android:layout_marginLeft="5dp"
        android:textSize="20dp" />
    
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="START DOWNLOAD"
        android:id="@+id/download_data_b"
        android:background="@drawable/picatch_button"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
