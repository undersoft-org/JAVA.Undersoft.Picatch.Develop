<?xml version="1.0" encoding="utf-8"?>
    <selector 
        xmlns:android="http://schemas.android.com/apk/res/android">
        <item 
            android:state_selected="true" >
			<shape 
			    xmlns:android="http://schemas.android.com/apk/res/android"
    			android:shape="rectangle" >
			    <gradient
			        android:startColor="#7d0084fb"
			        android:endColor="#FFFFFFFF"
			        android:angle="270" />
			    <padding 
			        android:left="0dp"

			        android:right="0dp"
			        android:bottom="0dp" />
			    <stroke 
			        android:color="#000000"
			        android:width="1px" />
			</shape>
	    </item>
        <item
            android:state_selected="false" >
			<shape 
			    xmlns:android="http://schemas.android.com/apk/res/android"
    			android:shape="rectangle" >
                <gradient
			        android:startColor="#FFFFFFFF"
			        android:endColor="#cccbcb"
			        android:angle="270" />
			    <padding 
			        android:left="0dp"
			        android:top="0dp"
			        android:right="0dp"
			        android:bottom="0dp" />
			    <stroke 
			        android:color="#000000"
			        android:width="1px" />
    		</shape>
    
        </item>
    </selector>
